{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "src",
    "outDir": "dist",
    /* === Language & Module === */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,
    /* === Node Environment === */
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    /* === Source Maps (optional for debugging) === */
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "prisma/seed.ts"
  ]
}
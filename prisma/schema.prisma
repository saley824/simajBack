generator client {
    provider   = "prisma-client-js"
    engineType = "library"
}

enum Currency {
    EUR
    USD
    BAM
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    User
    Admin
}

enum TransactionStatus {
    Started
    Completed
    Failed
}

enum CouponType {
    All
    OnlyCountry
    OnlyCountryWithoutDiscount
    CustomPercentageCountryRegion
    Free
}

enum DeviceType {
    mobile
    tablet
    laptop
}

model User {
    id                                 String    @id @default(uuid())
    username                           String    @unique
    email                              String    @unique
    isEmailVerified                    Boolean   @default(false)
    emailVerificationToken             String?
    emailVerificationTokenResetExpires DateTime?
    password                           String
    passwordResetToken                 String?
    passwordResetExpires               DateTime?
    role                               Role      @default(User)
    balance                            Decimal   @default(0) @db.Decimal(10, 2)
    created_at                         DateTime  @default(now())
    Review                             Review?
    isUsedReferralCode                 Boolean?  @default(false)

    // User who invited *me*
    invitedById String?
    invitedBy   User?   @relation("UserInvites", fields: [invitedById], references: [id])

    // Users that *I* invited
    invitedUsers User[] @relation("UserInvites")

    transactions         Transaction[]
    referralTransactions Transaction[] @relation("Referral")
}

model Country {
    id               Int                      @id @default(autoincrement())
    displayNameEn    String
    displayNameSr    String
    mcc              String
    isoCode          String
    keywords         String?
    startsFrom       Float?
    priority         Int
    supportedRegions RegionSupportedCountry[]
    Product          Product[]
}

model Region {
    id                 Int                      @id @default(autoincrement())
    displayNameEn      String
    displayNameSr      String
    code               String
    keywords           String?
    priority           Int?
    startsFrom         Float?
    supportedCountries RegionSupportedCountry[]
    Product            Product[]
}

model RegionSupportedCountry {
    regionId  Int
    countryId Int

    region  Region  @relation(fields: [regionId], references: [id])
    country Country @relation(fields: [countryId], references: [id])

    @@id([regionId, countryId])
}

//    "is_unlimited": true,

//     "high_speed_amount_unit": "GB",

model Product {
    id              String  @id
    name            String
    duration        Int
    durationUnit    String
    amount          Int?
    amountUnit      String?
    imsiProfile     String?
    originalPrice   Float?
    sellingPrice    Float?
    discountPercent Float?
    isUnlimited     Boolean @default(false)
    unlimitedSpeed  String?
    highSpeed       Int?
    highSpeedUnit   String?

    // Foreign keys
    regionId  Int?
    countryId Int?

    // Relations
    region       Region?       @relation(fields: [regionId], references: [id])
    country      Country?      @relation(fields: [countryId], references: [id])
    networks     Network[]
    transactions Transaction[]
    orders       Order[]
}

model Network {
    id          Int     @id @default(autoincrement())
    mccmnc      String
    name        String
    speed       String
    country_iso String
    productId   String
    product     Product @relation(fields: [productId], references: [id])
}

model CouponCode {
    id                Int        @id @default(autoincrement())
    code              String     @unique
    remainingUses     Int?
    countOFUsing      Int?
    countryPercentage Int?
    regionPercentage  Int?
    subjectEmail      String?
    subjectName       String?
    couponType        CouponType
    createdAt         DateTime   @default(now())
    isActive          Boolean?

    transactions Transaction[]
}

model Transaction {
    id             Int       @id @default(autoincrement())
    userId         String
    referralUserId String?
    couponCodeId   Int?
    productId      String
    orderId        String?   @unique
    price          Float?
    createdAt      DateTime? @default(now())

    TransactionStatus TransactionStatus @default(Started)

    user         User        @relation(fields: [userId], references: [id])
    referralUser User?       @relation("Referral", fields: [referralUserId], references: [id])
    product      Product     @relation(fields: [productId], references: [id])
    order        Order?      @relation(fields: [orderId], references: [id])
    couponCode   CouponCode? @relation(fields: [couponCodeId], references: [id])
}

model Order {
    id        String  @id
    iccid     String
    esimQr    String
    productId String
    apn       String?

    product     Product      @relation(fields: [productId], references: [id])
    transaction Transaction?
}

model Review {
    id         Int      @id @default(autoincrement())
    rating     Int
    comment    String?
    showOnHome Boolean?
    name       String
    lastName   String
    userId     String?  @unique
    user       User?    @relation(fields: [userId], references: [id])
}

model ContactMessage {
    id          Int     @id @default(autoincrement())
    email       String
    device      String?
    orderNumber String?
    question    String?
    isResolved  Boolean @default(false)
}

model DeviceBrand {
    id             Int                @id @default(autoincrement())
    name           String
    additionalText String?
    models         CompatibleDevice[]
    type           DeviceType

    @@unique([name, type])
}

model CompatibleDevice {
    id      Int         @id @default(autoincrement())
    brandId Int
    brand   DeviceBrand @relation(fields: [brandId], references: [id])

    model       String
    displayName String?
    notes       String?
    isActive    Boolean @default(true)
}

model ExchangeRate {
    id          Int      @id @default(autoincrement())
    currency    Currency
    rateFromBAM Decimal  @db.Decimal(10, 6)
    updatedAt   DateTime @updatedAt

    @@unique([currency])
}
